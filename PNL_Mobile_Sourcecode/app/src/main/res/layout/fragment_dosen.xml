<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Konten yang dapat di-scroll -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_chainStyle="packed">

            <ImageView
                android:id="@+id/dosenpage"
                android:layout_width="420dp"
                android:layout_height="900dp"
                android:src="@drawable/dosenpage"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="40dp"/>

            <ImageView
                android:id="@+id/headerImage"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:src="@drawable/headerimage"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="110dp"/>

            <ImageView
                android:id="@+id/datadosen"
                android:layout_width="220dp"
                android:layout_height="0dp"
                android:src="@drawable/datadosen"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="-135dp"
                android:layout_marginTop="308dp"/>

            <ImageView
                android:id="@+id/dosen1"
                android:layout_width="360dp"
                android:layout_height="200dp"
                android:src="@drawable/dosen1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="330dp"/>

            <ImageView
                android:id="@+id/dosen2"
                android:layout_width="360dp"
                android:layout_height="200dp"
                android:src="@drawable/dosen2"
                app:layout_constraintTop_toTopOf="@+id/dosen1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="160dp"/>

            <ImageView
                android:id="@+id/dosen3"
                android:layout_width="360dp"
                android:layout_height="200dp"
                android:src="@drawable/dosen3"
                app:layout_constraintTop_toTopOf="@+id/dosen2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="160dp"/>

            <ImageView
                android:id="@+id/dosen4"
                android:layout_width="360dp"
                android:layout_height="200dp"
                android:src="@drawable/dosen4"
                app:layout_constraintTop_toTopOf="@+id/dosen3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="160dp"/>

            <ImageView
                android:id="@+id/dosen5"
                android:layout_width="360dp"
                android:layout_height="200dp"
                android:src="@drawable/dosen5"
                app:layout_constraintTop_toTopOf="@+id/dosen4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="160dp"/>

            <ImageView
                android:id="@+id/extraLogo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logo"
                app:layout_constraintTop_toBottomOf="@id/dosen5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"
                android:alpha="0"/>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
