<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_chainStyle="packed">

        <ImageView
            android:id="@+id/visipage"
            android:layout_width="420dp"
            android:layout_height="900dp"
            android:src="@drawable/visipage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="40dp"/>

        <ImageView
            android:id="@+id/headerImage"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:src="@drawable/headerimage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="110dp"/>

        <ImageView
            android:id="@+id/visijurmes"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:src="@drawable/visijurmes"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="-195dp"
            android:layout_marginTop="300dp"/>

        <TextView
            android:id="@+id/headerText"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Menjadi Jurusan pendidikan Vokasi unggulan dalam bidang Ilmu Teknik Mesin untuk menyiapkan tenaga profesional yang adaptif terhadap perubahan IPTEK serta berdaya saing nasional dan global."
            android:textSize="16sp"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/headerImage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="16dp"
            android:fontFamily="@font/poppins_medium"
            android:justificationMode="inter_word"/>

        <ImageView
            android:id="@+id/misijurmes"
            android:layout_width="165dp"
            android:layout_height="60dp"
            android:src="@drawable/misijurmes"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="-190dp"
            android:layout_marginTop="465dp"/>

        <TextView
            android:id="@+id/headerText2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="1. Menyelenggarakan pendidikan vokasi yang profesional.\n\n2. Mengembangkan atmosfer akademik yang mendukung peningkatan kualitas tridharma perguruan tinggi.\n\n3. Melaksanakan penelitian terapan dan pengabdian kepada masyarakat berbasiskebutuhan masyarakat daerah dan pembangunan nasional.\n\n4. Melaksanakan sistem manajemen mutu dalam pengelolaan dan pengoperasian jurusan.\n\n5. Meningkatkan sumber daya manusia.\n\n6. Mengembangkan laboratorium ke arah laboratorium bersertifikasi.\n\n7. Mengembangkan kemampuan kewirausahaan mahasiswa dan kemampuan soft skill.\n\n8. Membina hubungan kerja sama dengan institusi pemerintah, industri, dan perguruan tinggi."
            android:textSize="16sp"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/headerImage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="205dp"
            android:layout_marginHorizontal="16dp"
            android:fontFamily="@font/poppins_medium"
            android:justificationMode="inter_word"/>

        <ImageView
            android:id="@+id/extraLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            app:layout_constraintTop_toBottomOf="@id/headerText2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"
            android:alpha="0"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
