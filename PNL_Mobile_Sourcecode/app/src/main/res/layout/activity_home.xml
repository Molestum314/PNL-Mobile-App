<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Konten yang dapat di-scroll -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_chainStyle="packed">

            <ImageView
                android:id="@+id/HomeJur"
                android:layout_width="420dp"
                android:layout_height="900dp"
                android:src="@drawable/homejur"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="40dp"/>

            <ImageView
                android:id="@+id/headerImage"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:src="@drawable/headerimage"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="110dp"/>

            <ImageView
                android:id="@+id/tentangjurusan"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:src="@drawable/tentangjurusan"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="-195dp"
                android:layout_marginTop="300dp"/>

            <TextView
                android:id="@+id/headerText"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="Jurusan Teknik Mesin (JTM) berdiri pada tahun 1987 bersama-sama dengan Jurusan Teknik Sipil dan Teknik Kimia dibawah naungan Politeknik Universitas Syiah Kuala yang kemudian berubah namanya menjadi Politeknik Negeri Lhokseumawe pada tanggal 5 Oktober 1987 berdasarkan Surat Keputusan Mendikbud No. 100/O/1997 tanggal..."
                android:textSize="16sp"
                android:textColor="#000000"
                app:layout_constraintTop_toBottomOf="@id/headerImage"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="16dp"
                android:fontFamily="@font/poppins_medium"
                android:justificationMode="inter_word"/>

            <Button
                android:id="@+id/buttonSelengkapnya"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:text="@string/button_action_text"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button"
                app:layout_constraintTop_toBottomOf="@id/headerImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="250dp"
                android:layout_marginStart="22dp"
                android:layout_marginHorizontal="16dp"
                android:textSize="12sp"/>

            <ImageButton
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:src="@drawable/tentangprodi"
                android:background="#00000000"
                app:layout_constraintTop_toBottomOf="@id/buttonSelengkapnya"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/button2"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="20dp"
                android:scaleType="fitStart"
                android:contentDescription="Tombol tentang prodi"/>

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:src="@drawable/tujuanjur"
                android:background="#00000000"
                app:layout_constraintTop_toBottomOf="@id/buttonSelengkapnya"
                app:layout_constraintStart_toEndOf="@id/button1"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="22dp"
                android:scaleType="fitStart"
                android:contentDescription="Tombol tujuan jurusan"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <include
        android:id="@+id/navbarLayout"
        layout="@layout/navbar_layout" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
